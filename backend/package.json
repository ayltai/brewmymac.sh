{
    "name"            : "brewmymac-backend",
    "description"     : "The backend for BrewMyMac",
    "version"         : "1.0.0",
    "author"          : {
        "name" : "Alan Tai"
    },
    "repository"      : {
        "type" : "git",
        "url"  : "https://github.com/ayltai/brewmymac.sh"
    },
    "bugs"            : {
        "url" : "https://github.com/ayltai/brewmymac.sh/issues"
    },
    "scripts"         : {
        "clean"         : "pnpm dlx rimraf --glob **/node_modules package-lock.json pnpm-lock.yaml",
        "reset"         : "pnpm run clean && pnpm i && pnpm audit -P",
        "build"         : "tsc",
        "lint"          : "eslint --ext .ts src",
        "pretest"       : "pnpm run lint",
        "test"          : "pnpm run build && concurrently --k -s command-jest -n firestore,functions,jest \"pnpm run dev:firestore\" \"pnpm run dev:functions\" \"wait-on tcp:8081 && jest --no-cache --maxWorkers=100%\"",
        "dev:firestore" : "gcloud emulators firestore start --host-port=localhost:8081",
        "dev:functions" : "functions-framework --target=index --source=src --signature-type=http",
        "dev"           : "pnpm run build && concurrently --k -n firestore,functions \"pnpm run dev:firestore\" \"pnpm run dev:functions\"",
        "start"         : "functions-framework --target=index --source=src --signature-type=http",
        "update"        : "pnpm dlx npm-check-updates"
    },
    "dependencies"    : {
        "@google-cloud/functions-framework" : "^3.3.0",
        "firebase-admin"                    : "^12.0.0",
        "fireorm"                           : "^0.23.3",
        "http-status-codes"                 : "^2.3.0",
        "nanoid"                            : "^3.3.7"
    },
    "devDependencies" : {
        "@babel/core"                       : "^7.23.9",
        "@babel/plugin-proposal-decorators" : "^7.23.9",
        "@babel/preset-env"                 : "^7.23.9",
        "@babel/preset-typescript"          : "^7.23.3",
        "@babel/runtime"                    : "^7.23.9",
        "@types/jest"                       : "^29.5.12",
        "@types/supertest"                  : "^6.0.2",
        "@types/uuid"                       : "^9.0.8",
        "@typescript-eslint/eslint-plugin"  : "^7.0.1",
        "babel-jest"                        : "^29.7.0",
        "concurrently"                      : "^8.2.2",
        "eslint"                            : "^8.56.0",
        "eslint-plugin-import"              : "^2.29.1",
        "eslint-plugin-prefer-arrow"        : "^1.2.3",
        "jest"                              : "^29.7.0",
        "typescript"                        : "^5.3.3",
        "wait-on"                           : "^7.2.0"
    },
    "jest"            : {
        "collectCoverage" : true,
        "testEnvironment" : "node",
        "testMatch"       : [
            "<rootDir>/src/**/*.test.ts"
        ]
    },
    "engines"         : {
        "node" : ">=20",
        "pnpm" : ">=8"
    }
}
