else
  echo '‚úÖ Homebrew is already installed.'
fi

<% if (ingredients.some(ingredient => ingredient.source === 'App Store')) { %>
  echo '‚è≥ Installing prerequisites ...'
  brew install mas
  echo '‚úÖ Prerequisites are installed'
<% } %>

